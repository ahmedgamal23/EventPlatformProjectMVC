@model EventPlatformProjectMVC.Domain.Event

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                @if (Model.Picture != null && Model.Picture.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Picture)" class="img-thumbnail" style="width:30rem;" alt="Event Picture" />
                }
                else
                {
                    <div class="d-flex justify-content-center align-items-center bg-light" style="height: 15rem;">
                        <span>No Image</span>
                    </div>
                }
            </div>
            <div class="col-md-7">
                <h1 class="form-text">@Model.Title</h1>
                <p class="form-text p-1 m-2 justify-content-start">
                    @Model.Description
                </p>
                <h4 class="form-text p-1 m-2 justify-content-start">Location: @Model.Location</h4>
                <div class="d-flex justify-content-between">
                    <h5 class="form-text p-1 m-2 justify-content-start">Start Date: @Model.StartDateTime.ToString("MM/dd/yyyy")</h5>
                    <h5 class="form-text p-1 m-2 justify-content-start">End Date: @Model.EndDateTime.ToString("MM/dd/yyyy")</h5>
                </div>
                <p class="form-text p-1 m-2 justify-content-start">Organizer: @Model.OrganizerId</p>
                <p class="form-text p-1 m-2 justify-content-start">Created At: @Model.CreatedAt.ToString("MM/dd/yyyy")</p>

                <div class="d-flex justify-content-center ">
                    <div class="d-flex me-4">
                        <a asp-controller="Event" asp-action="Index" class="btn btn-outline-dark ps-5 pe-5 mt-4">Back</a>
                    </div>

                    <div class="d-flex">
                        <a asp-controller="Booking" asp-action="Details" asp-route-eventId="@Model.Id" class="btn btn-success ps-5 pe-5 mt-4">Book</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

