<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventPlatformProjectMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand navbar-header" asp-area="" asp-controller="Home" asp-action="Index">EventPlatformProjectMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link navbar-header" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole(EventPlatformProjectMVC.Domain.UserRole.Organizer.ToString()))
                        {
                            <li class="nav-item">
                                <a class="nav-link navbar-header" asp-area="" asp-controller="Event" asp-action="Index">Events</a>
                            </li>
                        }
                        @if(User.Identity?.IsAuthenticated ?? false){
                            <li class="nav-item">
                                <a class="nav-link navbar-header" asp-area="" asp-controller="Booking" asp-action="Index">Booking</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link navbar-header" asp-area="" asp-controller="Profile" asp-action="Index">Profile</a>
                            </li>
                        }
                    </ul>
                    <div class="navbar-text navbar-header">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <span>Welcome, @User.Identity.Name!</span>
                        }
                    </div>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer">
        <div class="container">
            &copy; 2024 - EventPlatformProjectMVC - <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
