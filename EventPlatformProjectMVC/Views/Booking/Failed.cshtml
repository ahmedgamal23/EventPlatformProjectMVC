@{
    ViewData["Title"] = "Payment Failed";
}

<div class="container d-flex flex-column align-items-center justify-content-center min-vh-100 text-center">
    <div class="card shadow-lg p-4 border-0" style="max-width: 500px;">
        <div class="text-center">
            <img src="~/images/payment_failed.png" class="img-fluid" alt="Payment Failed" style="max-height: 200px;">
        </div>
        <div class="mt-4">
            <h1 class="text-danger fw-bold">Payment Failed</h1>
            <p class="text-muted">Oops! Something went wrong. Your booking is not confirmed.</p>
        </div>
        <div class="mt-3">
            <a class="btn btn-danger btn-lg w-100" asp-action="Index" asp-controller="Home">
                <i class="fas fa-home me-2"></i>Back to Home
            </a>
        </div>
    </div>
</div>

